                redirectUri: window.location.origin
            },
            cache: {
                cacheLocation: "sessionStorage",
                storeAuthStateInCookie: false
            }
        };

        const msalInstance = new msal.PublicClientApplication(msalConfig);
        let accessToken = null;
        let currentUser = null;

        // ID del archivo Excel de la matriz de riesgos
        const EXCEL_FILE_ID = "u!aHR0cHM6Ly9maWFzZWMuc2hhcmVwb2ludC5jb20vOng6L3MvRk9ORE9ERUlOVkVSU0lPTkFNQklFTlRBTFNPU1RFTklCTEUvRVJ0X0xmQjkxaVpPZ1Z0QjNLSHBkN2NCLVk0S2w2eV9POHlmTFllaDBscVZzZw==";
        
        // Variables globales
        let allRisksData = [];
        let table;
        let riskLevelChart, riskFactorChart, complianceChart, projectRiskChart;
        let originalWorkbook = null;
        
        // Scopes para lectura y escritura
        const SCOPES = ["Files.ReadWrite.All", "Sites.ReadWrite.All"];

        /**
         * Procesa los datos crudos del JSON de Excel para adaptarlos a la estructura de la aplicación.
         */
        function processExcelData(jsonData) {
            if (!jsonData) return [];
            
            return jsonData.map((row, index) => ({
                id: index,
                proyecto: row.PROYECTO || row["PROYECTO- LOCALIDAD"] || 'N/A',
                eventoRiesgo: row["¿Qué podría suceder?"] || row["Descripción del evento de Riesgo"] || '',
                causa: row["¿Porqué podría suceder?"] || row.Causa || '',
                efecto: row.Consecuencia || row.Efecto || '',
                factorRiesgo: row["Factor de Riesgo"] || '',
                nivelRiesgo: row["Nivel de Riesgo inherente"] || '',
                planAccion: row["Descripción del Control"] || row["Plan de acción"] || '',
                responsable: row.Responsable || row["Responsable del Control"] || 'N/A',
                estado: row["Evaluación de la efectividad del control."] || row.Estado || '',
                fechaSeguimiento: row["Fecha de seguimiento (Columna de Auditoría Interna)"] || row["Fecha de seguimiento"] || '',
                observacion: row["Observación (Puede colocar el responsable o AI)"] || row.Observación || '',
                // Campos para mapeo con Excel
                excelRow: index + 2, // +2 porque Excel empieza en 1 y la primera fila son headers
                rawData: row
            }));
        }

        /**
         * Actualiza el archivo Excel en SharePoint con los datos modificados
         */
        async function updateExcelFile() {
            try {
                showSaveIndicator('Guardando cambios...');
                
                if (!originalWorkbook) {
                    throw new Error('No hay datos originales del Excel');
                }

                // Obtener la primera hoja
                const sheetName = originalWorkbook.SheetNames[0];
                const worksheet = originalWorkbook.Sheets[sheetName];
                
                // Convertir la hoja a JSON para mantener la estructura
                const jsonData = XLSX.utils.sheet_to_json(worksheet, { header: 1 });
                
                // Actualizar los datos modificados
                allRisksData.forEach(risk => {
                    if (risk.excelRow && jsonData[risk.excelRow - 1]) {
                        const row = jsonData[risk.excelRow - 1];
                        
                        // Mapear los campos actualizados a las columnas correspondientes
                        // Esto depende de la estructura exacta de tu Excel
                        // Ajusta estos índices según tu archivo
                        row[2] = risk.eventoRiesgo; // Columna C
                        row[3] = risk.causa; // Columna D
                        row[4] = risk.efecto; // Columna E
                        row[6] = risk.factorRiesgo; // Columna G
                        row[11] = risk.nivelRiesgo; // Columna L
                        row[21] = risk.planAccion; // Columna V
                        row[22] = risk.responsable; // Columna W
                        row[31] = risk.estado; // Columna AF
                        row[29] = risk.fechaSeguimiento; // Columna AD
                        row[32] = risk.observacion; // Columna AG
                    }
                });

                // Convertir de nuevo a hoja de cálculo
                const updatedWorksheet = XLSX.utils.aoa_to_sheet(jsonData);
                originalWorkbook.Sheets[sheetName] = updatedWorksheet;

                // Convertir a buffer
                const excelBuffer = XLSX.write(originalWorkbook, { bookType: 'xlsx', type: 'array' });
                
                // Subir el archivo actualizado
                const response = await fetch(`https://graph.microsoft.com/v1.0/me/drive/items/${EXCEL_FILE_ID}/content`, {
                    method: 'PUT',
                    headers: {
                        'Authorization': `Bearer ${accessToken}`,
                        'Content-Type': 'application/vnd.openxmlformats-officedocument.spreadsheetml.sheet'
                    },
                    body: excelBuffer
                });

                if (!response.ok) {
                    throw new Error(`Error al guardar: ${response.status} ${response.statusText}`);
                }

                showSaveIndicator('Cambios guardados correctamente', true);
                setTimeout(() => {
                    hideSaveIndicator();
                }, 3000);

            } catch (error) {
                console.error('Error al actualizar Excel:', error);
                showSaveIndicator('Error al guardar cambios', false);
                setTimeout(() => {
                    hideSaveIndicator();
                }, 3000);
            }
        }

        /**
         * Muestra el indicador de guardado
         */
        function showSaveIndicator(message, isSuccess = true) {
            const indicator = document.getElementById('saveIndicator');
            indicator.innerHTML = isSuccess ? 
                `<i class="fas fa-check me-2"></i> ${message}` :
                `<i class="fas fa-exclamation-triangle me-2"></i> ${message}`;
            indicator.style.backgroundColor = isSuccess ? '#28a745' : '#dc3545';
            indicator.style.display = 'block';
        }

        function hideSaveIndicator() {
            document.getElementById('saveIndicator').style.display = 'none';
        }

        /**
         * Actualiza un riesgo específico en los datos y en Excel
         */
        async function updateRisk(riskId, updatedData) {
            const riskIndex = allRisksData.findIndex(r => r.id === riskId);
            if (riskIndex !== -1) {
                // Actualizar en memoria
                allRisksData[riskIndex] = { ...allRisksData[riskIndex], ...updatedData };
                
                // Actualizar en Excel
                await updateExcelFile();
                
                // Actualizar visualizaciones
                updateVisualizations(allRisksData);
                
                // Redibujar la tabla si existe
                if (table) {
                    table.ajax.reload();
                }
                
                return true;
            }
            return false;
        }

        /**
         * Agrega un nuevo riesgo
         */
        async function addNewRisk(riskData) {
            // Generar nuevo ID
            const newId = Math.max(...allRisksData.map(r => r.id), 0) + 1;
            
            const newRisk = {
                id: newId,
                ...riskData,
                excelRow: allRisksData.length + 2, // Nueva fila en Excel
                rawData: {}
            };
            
            // Agregar a los datos
            allRisksData.push(newRisk);
            
            // Actualizar en Excel
            await updateExcelFile();
            
            // Actualizar visualizaciones
            updateVisualizations(allRisksData);
            
            // Redibujar la tabla
            if (table) {
                table.ajax.reload();
            }
            
            return newRisk;
        }

        /**
         * Elimina un riesgo
         */
        async function deleteRisk(riskId) {
            const riskIndex = allRisksData.findIndex(r => r.id === riskId);
            if (riskIndex !== -1) {
                // Eliminar de los datos
                allRisksData.splice(riskIndex, 1);
                
                // Actualizar en Excel
                await updateExcelFile();
                
                // Actualizar visualizaciones
                updateVisualizations(allRisksData);
                
                // Redibujar la tabla
                if (table) {
                    table.ajax.reload();
                }
                
                return true;
            }
            return false;
        }

        // El resto del código (updateVisualizations, updateDashboardCards, updateCharts, etc.)
        // se mantiene igual que en la versión anterior, pero con las siguientes adiciones:

        /**
         * Inicializa la tabla DataTable con funcionalidades de edición
         */
        function initializeTable() {
            table = $('#risksTable').DataTable({
                data: allRisksData,
                columns: [
                    { data: 'proyecto' },
                    { 
                        data: 'eventoRiesgo',
                        render: function(data, type, row) {
                            return `<span class="editable-field" data-field="eventoRiesgo" data-id="${row.id}">${data}</span>`;
                        }
                    },
                    { 
                        data: 'causa',
                        render: function(data, type, row) {
                            return `<span class="editable-field" data-field="causa" data-id="${row.id}">${data}</span>`;
                        }
                    },
                    { 
                        data: 'efecto',
                        render: function(data, type, row) {
                            return `<span class="editable-field" data-field="efecto" data-id="${row.id}">${data}</span>`;
                        }
                    },
                    { data: 'factorRiesgo' },
                    { 
                        data: 'nivelRiesgo',
                        render: function(data, type, row) {
                            let badgeClass = 'risk-badge ';
                            if (data === 'Alto') badgeClass += 'risk-high';
                            else if (data === 'Medio') badgeClass += 'risk-medium';
                            else if (data === 'Bajo') badgeClass += 'risk-low';
                            else badgeClass += 'risk-very-low';
                            return `<span class="${badgeClass}">${data}</span>`;
                        }
                    },
                    { 
                        data: 'planAccion',
                        render: function(data, type, row) {
                            return `<span class="editable-field" data-field="planAccion" data-id="${row.id}">${data}</span>`;
                        }
                    },
                    { 
                        data: 'responsable',
                        render: function(data, type, row) {
                            return `<span class="editable-field" data-field="responsable" data-id="${row.id}">${data}</span>`;
                        }
                    },
                    { 
                        data: 'estado',
                        render: function(data, type, row) {
                            let badgeClass = 'status-badge ';
                            if (data === 'Cumplido') badgeClass += 'status-cumplido';
                            else if (data === 'Parcialmente cumplido') badgeClass += 'status-parcial';
                            else if (data === 'No cumplido') badgeClass += 'status-no-cumplido';
                            else badgeClass += 'status-na';
                            return `<span class="${badgeClass}" data-field="estado" data-id="${row.id}">${data}</span>`;
                        }
                    },
                    { 
                        data: 'fechaSeguimiento',
                        render: function(data, type, row) {
                            return `<span class="editable-field" data-field="fechaSeguimiento" data-id="${row.id}">${data}</span>`;
                        }
                    },
                    {
                        data: null,
                        render: function(data, type, row) {
                            return `
                                <div class="btn-group btn-group-sm">
                                    <button class="btn btn-outline-primary edit-btn" data-id="${row.id}">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn btn-outline-info view-btn" data-id="${row.id}">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                            `;
                        },
                        orderable: false
                    }
                ],
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.5/i18n/es-ES.json'
                },
                pageLength: 10,
                responsive: true,
                order: [[5, 'desc']]
            });

            // Event listeners para botones de acción
            $('#risksTable tbody').on('click', '.view-btn', function() {
                const riskId = $(this).data('id');
                const risk = allRisksData.find(r => r.id === riskId);
                showRiskDetails(risk);
            });

            $('#risksTable tbody').on('click', '.edit-btn', function() {
                const riskId = $(this).data('id');
                const risk = allRisksData.find(r => r.id === riskId);
                openEditModal(risk);
            });

            // Event listener para campos editables
            $('#risksTable tbody').on('click', '.editable-field', function() {
                const field = $(this).data('field');
                const riskId = $(this).data('id');
                const risk = allRisksData.find(r => r.id === riskId);
                openEditModal(risk);
            });
        }

        /**
         * Abre el modal de edición con los datos del riesgo
         */
        function openEditModal(risk) {
            document.getElementById('editRowIndex').value = risk.id;
            document.getElementById('editProyecto').value = risk.proyecto;
            document.getElementById('editEventoRiesgo').value = risk.eventoRiesgo;
            document.getElementById('editCausa').value = risk.causa;
            document.getElementById('editEfecto').value = risk.efecto;
            document.getElementById('editFactorRiesgo').value = risk.factorRiesgo;
            document.getElementById('editNivelRiesgo').value = risk.nivelRiesgo;
            document.getElementById('editPlanAccion').value = risk.planAccion;
            document.getElementById('editResponsable').value = risk.responsable;
            document.getElementById('editEstado').value = risk.estado;
            document.getElementById('editFechaSeguimiento').value = risk.fechaSeguimiento;

            const modal = new bootstrap.Modal(document.getElementById('editRiskModal'));
            modal.show();
        }

        /**
         * Función principal para cargar los datos desde Excel Online
         */
        async function loadExcelData() {
            try {
                updateLoadingText('Conectando con Excel Online...');
                
                if (!accessToken) {
                    throw new Error('No hay token de acceso disponible');
                }

                updateLoadingText('Descargando datos...');
                
                // Realizar la solicitud para obtener el archivo Excel
                const response = await fetch(`https://graph.microsoft.com/v1.0/me/drive/items/${EXCEL_FILE_ID}/content`, {
                    headers: {
                        'Authorization': `Bearer ${accessToken}`
                    }
                });

                if (!response.ok) {
                    throw new Error(`Error al obtener el archivo: ${response.status} ${response.statusText}`);
                }

                updateLoadingText('Procesando datos...');
                
                const arrayBuffer = await response.arrayBuffer();
                const data = new Uint8Array(arrayBuffer);
                originalWorkbook = XLSX.read(data, { type: 'array' });
                
                // Obtener la primera hoja
                const firstSheetName = originalWorkbook.SheetNames[0];
                const worksheet = originalWorkbook.Sheets[firstSheetName];
                
                // Convertir a JSON
                const jsonData = XLSX.utils.sheet_to_json(worksheet);
                
                updateLoadingText('Procesando datos...');
                
                // Procesar los datos para adaptarlos a nuestra estructura
                allRisksData = processExcelData(jsonData);
                
                // Actualizar la interfaz
                updateFilters();
                updateVisualizations(allRisksData);
                initializeTable();
                
                // Mostrar la tabla y ocultar el mensaje de espera
                document.getElementById('tableContainer').style.display = 'block';
                document.querySelector('.no-data-message').style.display = 'none';
                
                // Actualizar la fecha de última actualización
                document.getElementById('lastUpdate').textContent = new Date().toLocaleString('es-EC');
                
                updateLoadingText('Datos cargados correctamente');
                setTimeout(() => {
                    document.getElementById('loadingOverlay').style.display = 'none';
                }, 500);
                
            } catch (error) {
                console.error('Error al cargar datos:', error);
                updateLoadingText(`Error: ${error.message}`);
                
                setTimeout(() => {
                    document.getElementById('loadingOverlay').style.display = 'none';
                    alert('Error al cargar los datos. Verifique su conexión y permisos.');
                }, 2000);
            }
        }

        // Inicialización cuando se carga la página
        document.addEventListener('DOMContentLoaded', function() {
            // Configurar event listeners para los nuevos botones
            document.getElementById('saveRiskBtn').addEventListener('click', async function() {
                const riskId = parseInt(document.getElementById('editRowIndex').value);
                const updatedData = {
                    proyecto: document.getElementById('editProyecto').value,
                    eventoRiesgo: document.getElementById('editEventoRiesgo').value,
                    causa: document.getElementById('editCausa').value,
                    efecto: document.getElementById('editEfecto').value,
                    factorRiesgo: document.getElementById('editFactorRiesgo').value,
                    nivelRiesgo: document.getElementById('editNivelRiesgo').value,
                    planAccion: document.getElementById('editPlanAccion').value,
                    responsable: document.getElementById('editResponsable').value,
                    estado: document.getElementById('editEstado').value,
                    fechaSeguimiento: document.getElementById('editFechaSeguimiento').value
                };

                if (riskId >= 0) {
                    // Editar riesgo existente
                    await updateRisk(riskId, updatedData);
                } else {
                    // Agregar nuevo riesgo
                    await addNewRisk(updatedData);
                }

                bootstrap.Modal.getInstance(document.getElementById('editRiskModal')).hide();
            });

            document.getElementById('deleteRiskBtn').addEventListener('click', async function() {
                const riskId = parseInt(document.getElementById('editRowIndex').value);
                if (confirm('¿Está seguro de que desea eliminar este riesgo?')) {
                    await deleteRisk(riskId);
                    bootstrap.Modal.getInstance(document.getElementById('editRiskModal')).hide();
                }
            });

            document.getElementById('addRiskBtn').addEventListener('click', function() {
                // Limpiar el formulario
                document.getElementById('riskForm').reset();
                document.getElementById('editRowIndex').value = -1;
                
                const modal = new bootstrap.Modal(document.getElementById('editRiskModal'));
                modal.show();
            });

            // El resto del código de inicialización se mantiene igual...
            // [El resto del código de inicialización permanece igual]
        });

